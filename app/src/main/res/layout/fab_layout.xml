<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:onClick="onClickMsg"
        android:src="@drawable/msg_icon_white"
        android:visibility="invisible"
        android:clickable="false"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="mini" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:onClick="onClickCall"
        android:src="@drawable/call_icon_white"
        android:visibility="invisible"
        android:clickable="false"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="mini" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_vk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:onClick="onClickVk"
        android:src="@drawable/vk_icon_white"
        android:visibility="invisible"
        android:clickable="false"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="mini" />

</FrameLayout>